

<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
        <div class="card text-center pt-5" style="width: 23rem;">
          <%=image_tag 'logo.png', class: "card-img-top"%>
          <p class="width-75 fs-6 fw-bold text-muted align-self-center mt-2">Sign up to see photos and videos from your friends</p>
          <a href="#" class="d-block mt-4 text-decoration-none fw-bold bg-primary text-white rounded w-70 mx-auto self-align-center p-1">
              <%= image_tag("facebook.png", class: "facebook") %>
                <span class="ms-2">Log in with Facebook</span>
              </a>
               <div class="d-flex align-items-center mt-4">
                <div class="line"></div>
                <h2 class="line-text">OR</h2>
                <div class="line"></div>
              </div>
          <div class="card-body">
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="mb-3 mb-4">               
                <%= f.email_field :email, class: "form-control", placeholder: "phone number,username or email"%>
                </div>
                <div class="mb-3 mb-4">               
                <%= f.text_field :full_name, class: "form-control", placeholder: "User name"%>
                </div>
                <div class="mb-3">         
                <%= f.password_field :password, class: "form-control", placeholder: "new password"%>
                </div>

                <div class="mb-3">         
                <%= f.password_field :password_confirmation,  class: "form-control", placeholder: "re-enter password" %>
                </div>
             <br>
                <%= f.submit "Submit", class: "btn btn-primary w-100"%>

            <%end%>
             

              
            <% if notice%>
              <p class="notice"><%= notice %></p>
              <%elsif alert%>
              <p class="alert"><%= alert %></p>
              <%else%>
            <%end%>
            <a href="#" class="fs-6 d-block my-4 text-decoration-none">Forgot Password?</a>
          </div>

          <div class="card text-center py-2 mt-3" style="width: 23rem;">
          <div class="card-text">
              Have an account<br>
          <%=link_to "Log in", user_session_path,  class:"fs-6 my-4 text-decoration-none"%>
          </div>
        </div>
        </div>
    </div>
</div>